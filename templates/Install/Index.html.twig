{% extends "Blank.html.twig" %}

{% block title %}Install{% endblock %}

{% block content %}

	<h1>Install</h1>

	<p>
		There are no users in the current system. Please create the first user entry.
	</p>

	<form action="{{ path_for('install') }}" method="post">
		<div class="form-group">
			<label for="email">E-Mail</label>
			<input type="email" class="form-control" id="email" name="email" aria-describedby="email" placeholder="E-Mail">
			<small id="username" class="form-text text-muted">The E-Mail address of the user (also login name)</small>
		</div>
		<div class="form-group">
			<label for="password">Password</label>
			<input type="password" class="form-control" id="password" name="password" aria-describedby="password" placeholder="Password" value="">
			<small id="password" class="form-text text-muted">Password for the first user</small>
		</div>
		<button type="submit" class="btn btn-primary" data-command="save">Create & redirect to home <kbd>CTRL + S</kbd></button>
	</form>

{% endblock %}